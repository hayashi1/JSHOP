<script>
$(document).ready(function(){
  google.maps.event.addDomListener(window, 'load', initialize);
  window.location.hash = 'first';
});

$('#genre_id').change(function(){
  $('#ranking').html('Now Loading...');
  var genre_id = $('#genre_id').val();
  var locate = $('#locate').val();
  $.ajax({
    url: '/items/search/' + locate + '?genre_id=' + genre_id,
    settings: {
      type: 'GET',
      ataType: 'html'
    }
  }).done(function(data){
    console.log('success');
    console.log(data);
    $('#ranking').html(data);
  }).fail(function(data){
    console.log('fail');
  });
});
$('#prefecture_search').click(function(){
  $('#ranking').html('Now Loading...');
  $('#prefecture_search').hide();
  var genre_id = $('#genre_id').val();
  var locate = $('#prefecture').val();
  $.ajax({
    url: '/items/search/' + locate + '?genre_id=' + genre_id,
    settings: {
      type: 'GET',
      ataType: 'html'
    }
  }).done(function(data){
    console.log('success');
    console.log(data);
    $('#ranking').html(data);
    $("#prefname").text(locate + "のお土産");
    $('#locality_search').show();
    $('#locate').val(locate);
    $('#search_mode').val('prefecture');
  }).fail(function(data){
    console.log('fail');
  });
});
$('#locality_search').click(function(){
  $('#ranking').html('Now Loading...');
  $('#locality_search').hide();
  var genre_id = $('#genre_id').val();
  var locate = $('#locality').val();
  $.ajax({
    url: '/items/search/' + locate + '?genre_id=' + genre_id,
    settings: {
      type: 'GET',
      ataType: 'html'
    }
  }).done(function(data){
    console.log('success');
    console.log(data);
    var locate = $('#locality').val();
    $('#ranking').html(data);
    $("#prefname").text(locate + "のお土産");
    $('#prefecture_search').show();
    $('#locate').val(locate);
    $('#search_mode').val('locality');
  }).fail(function(data){
    console.log('fail');
  });
});

</script>
