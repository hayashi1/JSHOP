  <div class="small-6 small-centered columns">
    <%= button_to_function('リロード', 'location.reload()', {class:'tiny button secondary'}) %>
  </div>
</div>
<input type="hidden" id="locate" name="locate" value="">
<input type="hidden" id="prefecture" name="prefecture" value="">
<input type="hidden" id="locality" name="locality" value="">
<input type="hidden" id="search_mode" name="search_mode" value="prefecture">

<a name="first"></a>
<h2 id="prefname"></h2>
<div id="prefecture_search" style="display:none"><a href="#">都道府県名で探す</a><br/><br/></div>
<div id="locality_search" style="display:none"><a href="#">市区町村名で探す</a><br/><br/></div>
■ジャンル<br/>
