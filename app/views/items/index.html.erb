<% content_for :title do %>
JSHOP - お土産情報
<% end %>

<h2>現在地</h2>
<div id="map-canvas">
</div>
<p class="center">
地図をタップして現在地を変更できます。<br/>
地図をドラッグして動かすことができます。
</p>
<div class="center">
  <%= button_tag('都道府県名で探す', {type:'button', id:'prefecture_search', class:'small button', style:'display:none'}) %>
  <%= button_tag('市区町村名で探す', {type:'button', id:'locality_search', class:'small button', style:'display:none'}) %>
</div>
<input type="hidden" id="locate" name="locate" value="">
<input type="hidden" id="prefecture" name="prefecture" value="">
<input type="hidden" id="locality" name="locality" value="">
<input type="hidden" id="search_mode" name="search_mode" value="prefecture">
<input type="hidden" id="genre_id" name="genre_id" value="">

<a name="first"></a>
<h2 id="prefname"></h2>
<div class="section-container tabs" data-section="tabs" id="genere_id">
  <section class="active omiyage" data-categoryid="551167">
    <input type="hidden" class="category_id" value="551167" >
    <p class="title" data-section-title><a href="#panel1">お菓子</a></p>
    <div class="content" data-section-content>
      <div id="suite">
        <%= render 'items', items: @rakuten_items %>
      </div>
    </div>
  </section>
  <section class="omiyage" data-categoryid="100227">
    <input type="hidden" class="category_id" value="100227">
    <p class="title" data-section-title><a href="#panel2">食品全体</a></p>
    <div class="content" data-section-content>
      <div id="foods">
        <%= render 'items', items: @rakuten_items %>
      </div>
    </div>
  </section>
</div>
<br/>
<div id="floatingBarsG" >
  <div class="blockG" id="rotateG_01"></div>
  <div class="blockG" id="rotateG_02"></div>
  <div class="blockG" id="rotateG_03"></div>
  <div class="blockG" id="rotateG_04"></div>
  <div class="blockG" id="rotateG_05"></div>
  <div class="blockG" id="rotateG_06"></div>
  <div class="blockG" id="rotateG_07"></div>
  <div class="blockG" id="rotateG_08"></div>
</div>
<div id="ranking">
</div>
<div class="center">
  <a href="#first">▲1位に戻る</a>
</div>
<br/>
<div class="center">
  <a href="https://docs.google.com/forms/d/1hAMqDp2ej4d3NB1ico5Oa0gQY3HC8nSi5kb-_ZwsxEQ/viewform">ご意見・ご感想</a>
</div>
<div class="center">
	<a href="/static/faq">よくある質問</a>
</div>
<%= render :partial => 'error_dialog' %>
<script>
$(document).ready(function(){
  google.maps.event.addDomListener(window, 'load', initialize);
});

$('.omiyage').click(function(){
  $('#ranking').html('');
  $('#floatingBarsG').show();
  var genre_id = $('.category_id').val();
  var locate = $('#locate').val();
  $.ajax({
    url: '/items/search/' + locate + '?genre_id=' + genre_id,
    settings: {
      type: 'GET',
      ataType: 'html'
    }
  }).done(function(data){
    console.log('success');
    console.log(data);
    $('#ranking').html(data);
    $('#floatingBarsG').hide();
    $('#genre_id').val(genre_id);
  }).fail(function(data){
    console.log('fail');
  });
});
$('#prefecture_search').click(function(){
  $('#ranking').html('');
  $('#floatingBarsG').show();
  var genre_id = $('#genre_id').val();
  var locate = $('#prefecture').val();
  $.ajax({
    url: '/items/search/' + locate + '?genre_id=' + genre_id,
    settings: {
      type: 'GET',
      ataType: 'html'
    }
  }).done(function(data){
    console.log('success');
    console.log(data);
    $('#ranking').html(data);
    $('#floatingBarsG').hide();
    $("#prefname").text(locate + "のお土産");
    $('#prefecture_search').hide();
    $('#locality_search').show();
    $('#locate').val(locate);
    $('#search_mode').val('prefecture');
  }).fail(function(data){
    console.log('fail');
  });
});
$('#locality_search').click(function(){
  $('#ranking').html('');
  $('#floatingBarsG').show();
  var genre_id = $('#genre_id').val();
  var locate = $('#locality').val();
  $.ajax({
    url: '/items/search/' + locate + '?genre_id=' + genre_id,
    settings: {
      type: 'GET',
      ataType: 'html'
    }
  }).done(function(data){
    console.log('success');
    console.log(data);
    var locate = $('#locality').val();
    $('#ranking').html(data);
    $('#floatingBarsG').hide();
    $("#prefname").text(locate + "のお土産");
    $('#locality_search').hide();
    $('#prefecture_search').show();
    $('#locate').val(locate);
    $('#search_mode').val('locality');
  }).fail(function(data){
    console.log('fail');
  });
});

</script>
